<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A4848"
    tools:context=".ResultActivity">

    <ImageView
        android:id="@+id/backBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow"
        app:tint="@color/white"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/homeBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backBt"
        app:srcCompat="@drawable/ic_home"
        app:tint="@color/white"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageToView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBt"
        app:layout_constraintVertical_bias="0.19"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/shareBt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/grey_oval"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/whatsappBt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageToView"
        app:srcCompat="@drawable/ic_share"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/fbBt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/instaBt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/whatsappBt"
        app:layout_constraintTop_toBottomOf="@+id/imageToView"
        app:srcCompat="@drawable/ic_facebook"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/whatsappBt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/fbBt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shareBt"
        app:layout_constraintTop_toBottomOf="@+id/imageToView"
        app:srcCompat="@drawable/ic_whatsapp"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/instaBt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fbBt"
        app:layout_constraintTop_toBottomOf="@+id/imageToView"
        app:srcCompat="@drawable/ic_instagram"
        tools:ignore="VectorDrawableCompat" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/resultAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>